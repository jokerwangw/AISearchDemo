<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cmcc.cmvideo.MainActivity">

    <TextView
        android:id="@+id/tv_current_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:text="当前版本号:"
        android:textColor="@color/guess_you_like_movie_name"
        android:textSize="@dimen/dimen_16dp"/>

    <Button
        android:id="@+id/turn_to_ai_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/turn_to_ai_search_marginB"
        android:background="@mipmap/icon_ai_search"
        />

    <Button
        android:id="@+id/turn_to_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dimen_8dp"
        android:text="@string/page_player"
        />

    <ToggleButton
        android:id="@+id/open_aiui_helper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dimen_8dp"
        android:background="@drawable/open_aiui_helper_selector"
        android:gravity="center"
        android:paddingLeft="@dimen/dimen_8dp"
        android:paddingRight="@dimen/dimen_8dp"
        android:textColor="#333333"
        android:textOff="开启语音助手"
        android:textOn="关闭语音助手"
        android:visibility="gone"/>

</RelativeLayout>
